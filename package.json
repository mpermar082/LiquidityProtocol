{
  // Package metadata
  "name": "liquidityprotocol",
  "version": "1.0.0",
  "description": "LiquidityProtocol - A TypeScript implementation",
  "main": "dist/index.js",
  
  // Scripts for build, start, dev, test, and clean operations
  "scripts": {
    "build": "tsc", // Compile TypeScript to JavaScript
    "start": "node dist/index.js", // Run the compiled application
    "dev": "ts-node src/index.ts", // Run the TypeScript application in development mode
    "test": "jest", // Run unit tests
    "clean": "rm -rf dist" // Clean the compiled output directory
  },
  
  // Package author and license information
  "author": "mpermar082",
  "license": "MIT",
  
  // Production dependencies
  "dependencies": {
    "minimist": "^1.2.0" // Command-line argument parser
  },
  
  // Development dependencies
  "devDependencies": {
    "typescript": "^5.0.0", // TypeScript compiler
    "@types/node": "^18.0.0", // TypeScript definitions for Node.js
    "@types/minimist": "^1.2.0", // TypeScript definitions for minimist
    "ts-node": "^10.0.0", // TypeScript execution environment
    "jest": "^29.0.0", // Unit testing framework
    "@types/jest": "^29.0.0" // TypeScript definitions for Jest
  }
}